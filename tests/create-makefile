#!/bin/sh

out=Makefile.am
cat >$out <<EOT
## This file is part of dvisvgm
## Copyright (C) 2005-2009 Martin Gieseking <martin.gieseking@uos.de>
##
## Process this file with automake.

AM_CXXFLAGS = -I../src -I../../src -Wall

TESTS =
check_PROGRAMS =

EOT

for f in *.cpp; do
	base=`basename $f .cpp`
	cat >>$out <<EOT	
TESTS += $base
check_PROGRAMS += $base
${base}_SOURCES = $f
${base}_LDADD = ../src/libdvisvgm.a -lgtest -lgtest_main

EOT
done

# vim: set syntax=sh: 
